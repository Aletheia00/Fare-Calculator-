#include <iostream>
#include <iomanip>
using namespace std;

int main() {

    // ===============================
    // Program skeleton and title
    // ===============================
    cout << "==============================" << endl;
    cout << "     Grab Fare Calculator     " << endl;
    cout << "==============================" << endl;


    // ===============================
    // Input: distance and number of passengers
    // ===============================
    double distance;   // input: distance in km
    int pax;           // input: number of passengers

    cout << "Enter distance (km): ";
    cin >> distance;

    cout << "Enter number of passengers: ";
    cin >> pax;


    // ===============================
    // Input: car type selection menu
    // ===============================
    int carType;

    cout << "Choose car type:" << endl;
    cout << "1. GrabCar (Base RM5, RM1.80/km, up to 4 pax)" << endl;
    cout << "2. GrabCar Plus (Base RM8, RM2.20/km, up to 4 pax)" << endl;
    cout << "3. GrabCar XL (Base RM10, RM2.50/km, up to 6 pax)" << endl;
    cout << "Enter option (1-3): ";
    cin >> carType;


    // ===============================
    // Fare calculation based on car type and distance
    // ===============================
    // Base fares and per km rates
    double baseGrabCar = 5.00, rateGrabCar = 1.80;
    double basePlus    = 8.00, ratePlus    = 2.20;
    double baseXL      = 10.00, rateXL     = 2.50;

    double totalFare;

    // Basic fare calculation
    if (carType == 1) {
        totalFare = baseGrabCar + (distance * rateGrabCar);
    }
    else if (carType == 2) {
        totalFare = basePlus + (distance * ratePlus);
    }
    else if (carType == 3) {
        totalFare = baseXL + (distance * rateXL);
    }
    else {
        cout << "❌ Invalid car type selection!" << endl;
        return 0;
    }

    cout << fixed << setprecision(2);
    cout << "Total fare: RM " << totalFare << endl;


    // ===============================
    // Passenger limit validation
    // ===============================
    if (carType == 1 && pax > 4) {
        cout << "⚠️ GrabCar cannot take more than 4 passengers!" << endl;
        return 0;
    }
    if (carType == 2 && pax > 4) {
        cout << "⚠️ GrabCar Plus cannot take more than 4 passengers!" << endl;
        return 0;
    }
    if (carType == 3 && pax > 6) {
        cout << "⚠️ GrabCar XL cannot take more than 6 passengers!" << endl;
        return 0;
    }


    // ===============================
    // Final output formatting
    // ===============================
    cout << "==============================" << endl;
    cout << "Total fare: RM " << totalFare << endl;
    cout << "Thank you for using Grab!" << endl;
    cout << "==============================" << endl;

    return 0;
}

